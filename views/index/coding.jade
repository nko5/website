        .sponsors-section.landing-section.row
          hr
          .col.col-md-12.col-sm-12.col-xs-12.col-lg-12
            h3 THANKS TO OUR PLATINUM SPONSORS
            .sponsor-grid

              .row
                a.col.col-md-3.col-sm-3.col-xs-3.col-lg-3(href="http://joyent.com", style="background-image:url(/images/sponsors/logos/joyent_inverted.png);")
                a.col.col-md-3.col-sm-3.col-xs-3.col-lg-3(href="http://goinstant.com", style="background-image:url(/images/sponsors/logos/goinstant_inverted.png);")
                a.col.col-md-3.col-sm-3.col-xs-3.col-lg-3(href="http://thenodefirm.com", style="background-image:url(/images/sponsors/logos/nodefirm_inverted.png);")
