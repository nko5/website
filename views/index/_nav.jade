#nav.nav-wrapper
  .nav-inner.row.navbar-default
    .col.col-md-12.col-sm-12.col-xs-12.col-lg-12
      .navbar-header
        button.navbar-toggle(type="button", data-toggle="collapse", data-target=".bs-navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar

      nav.collapse.navbar-collapse.bs-navbar-collapse(role="navigation")
        - if(typeof(activeNav) === "undefined")
          - var activeNav = "";
        ul.nav.navbar-nav

          unless activeNav === 'home'
            li
              a.nav-item(href="/") NKO 2015

          if voting || postVoting
            li(class=(activeNav === 'entries' ? 'active' : ''))
              a.nav-item(href="/entries") Entries
          else if winners
            //- li(class=(activeNav === 'winners' ? 'active' : ''))
            //-   a.nav-item(href="/winners") Winners
            li(class=(activeNav === 'entries' ? 'active' : ''))
              a.nav-item(href="/entries") Leaderboard

          else
            unless preRegistration
              li(class=(activeNav === 'teams' ? 'active' : ''))
                a.nav-item(href="/teams") Teams

          li(class=(activeNav === 'prizes' ? 'active' : ''))
            a.nav-item(href="/prizes") Prizes

          li(class=(activeNav === 'judges' ? 'active' : ''))
            a.nav-item(href="/judges") Judges

          li(class=(activeNav === 'sponsors' ? 'active' : ''))
            a.nav-item(href="/sponsors") Sponsors

          li(class=(activeNav === 'jobs' ? 'active' : ''))
            a.nav-item(href="/jobs") Jobs
          li(class=(activeNav === 'rules' ? 'active' : ''))
            a.nav-item(href="/rules") Rules
          li(class=(activeNav === 'about' ? 'active' : ''))
            a.nav-item(href="/about") About
