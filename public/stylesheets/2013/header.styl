@import "2013/_common"

body
  #header

    #header-gloves
      position: relative
      .nav-account
        position: absolute
        top: 30px
        right: 0px
        z-index: 100

    .header
      background: black
      .header-inner
        min-height: 101px
        // background: url('/images/2013/gloves-bg.jpg') no-repeat center center
        position: relative

      .logo
        background: transparent url('/images/2013/nko-logo.png') no-repeat center center
        width: 361px
        height: 73px
        text-indent: -9999px
        display: block
        z-index: 100
        position: absolute
        margin-left: -196px
        left: 50%
        top: 15px

      .header-inner.voting
        background: #181818
        background: url('/images/final-banner3.jpg') no-repeat center center
        background-size cover
        border-bottom: 5px solid #353439
        margin-left: 0
        margin-right: 0
        .votenow
          position absolute
          top 242px
          left 50%
          font-size 20px
          text-transform uppercase
          padding 10px 20px
          border-radius 8px
          box-shadow 0 0 30px rgba(0,0,0,.8)
          width 250px
          margin-left -125px
          letter-spacing 1px
          em
            display: block
            font-style: normal
            font-size: 14px
            opacity: 0.9
            padding-top: 3px
        .logo
          top: 135px

        &.animating
          @media (min-width: 768px)
            background: #000
            .col
              overflow: hidden
              height: 436px

            .projectbg
              opacity: 0.3
              -webkit-transform-origin: 50% 0
              -moz-transform-origin: 50% 0
              -o-transform-origin: 50% 0
              margin-left: -1600px
              width: 100%
              height: 495px

              .projectbg-inner
                position: relative
                -webkit-animation: banner 40s linear infinite
                animation: banner 40s linear infinite
                -moz-animation: banner 40s linear infinite
                -ms-animation: banner 40s linear infinite
                -o-animation: banner 40s linear infinite

                .projectbg-banner
                  background-image url("/images/banner-entries-2015-4.jpg")
                  background-repeat repeat
                  width: 4070px
                  height: 540px
                  background-position: 0 0

                  &:nth-child(1)
                    background-position: 925px 0px
                  &:nth-child(2)
                    background-position: 1850px 0px
                  &:nth-child(3)
                    background-position: 2775px 0px
                  &:nth-child(4)
                    background-position: 3700px 0px
                  &:nth-child(5)
                    background-position: 4625px 0px
                  &:nth-child(6)
                    background-position: 5550px 0px
                  &:nth-child(7)
                    background-position: 6475px 0px
                  &:nth-child(8)
                    background-position: 7400px 0px
                  &:nth-child(9)
                    background-position: 8325px 0px
                  &:nth-child(10)
                    background-position: 9250px 0px
                  &:nth-child(11)
                    background-position: 10175px 0px
                  &:nth-child(12)
                    background-position: 11100px 0px
                  &:nth-child(13)
                    background-position: 12025px 0px
                  &:nth-child(14)
                    background-position: 12950px 0px
                  &:nth-child(15)
                    background-position: 13875px 0px
                  &:nth-child(16)
                    background-position: 14800px 0px
                  &:nth-child(17)
                    background-position: 15725px 0px
                  &:nth-child(18)
                    background-position: 16650px 0px
                  &:nth-child(19)
                    background-position: 17575px 0px
                  &:nth-child(20)
                    background-position: 18500px 0px

    .navbar-header
      position: absolute
      right: 10px
      top: 0

    .nav-wrapper
      text-align: center
      padding: 10px 0
      nav, .nav-inner
        background: none
        .col
          position: static

      a
        display: inline-block
        margin: 2px 5px
        padding: 5px 4px
        font-family: franklin
        text-transform: uppercase
        font-size: 12px
        letter-spacing: 1px
        line-height: 1.2
        border-radius: 2px
        text-shadow: none

        color: #fff
        &:hover
          background-color: rgba(201, 59, 71, .9)
          text-decoration: none
          transition: .2s

      li.active a
        background-color: rgba(185, 46, 74, 1)

    &.affix-top
      nav, .navbar-nav
        float: none !important
        text-align: center
        width 80%
        margin 3px auto
        position relative

        .caret
          border-top-color #fff
          border-bottom-color #fff

        ul.dropdown-menu
          position absolute
          top 32px
          right 120px
          padding 0
          li
            color #333
            a
              display block
              text-align left
              color #333
              &:hover
                color #fff
      nav
        padding-left: 0
        padding-right: 0
      .nav-wrapper
        padding-top: 8px
        padding-bottom: 0
        a
          margin: 5px 3px
          padding: 9px 13px
          padding-bottom: 3px
      .navbar-header
        position: absolute
        right: 10px
        top: 22px


    &.affix
      position: static
      .affix-inner
        position: fixed
        left: 0
        right: 0
        top: 0
        height: 50px
        z-index: 30
        .header
          height: 50px
          overflow: hidden
          opacity: 0.96
          background-color #9F2C38
          .container
            position: relative
            max-width: 900px
        .logo
          display: none !important

        .gloves
          width: 190px
          height: 99px
          background-size: 100% 100%
          opacity: 0.3
          width: 802px;
          background-size: cover;
          z-index: 1;
          height: 500px;
          position: absolute
          top: -171px;
          left: 155px;

      .affix-placeholder
        height: 495px

  @media (max-width: 767px)
    #header
      #header-gloves .nav-account
        position: static
        padding-top: 89px
        .btn
          position: absolute
          top: 30px
          left: 10px
      .header
        .header-inner
          background: #353439
          min-height: 0px
          height: 100px
          overflow: hidden
          margin-bottom: -40px
          .logo
            margin: auto
            left: 0
            right: 0
            top: 12px
          &.voting
            background: #353439
            height: 200px
            .logo
              top: 12px
            .votenow
              top: 100px
              padding: 10px
        .affix-inner
          min-height: 0
          height: 147px
          background-size: 80%
          background-position: center center
      &.affix-top .logo-sm
        display: none
