@import "2013/_common"

#page.judges
  ul.judges
    list-style-type none
    padding 0
    margin 0
    h3
      margin-top 0
      a
        font-size 20px
    .avatar
      float left
      width 80px
      margin-right 10px
      border-radius 4px
    .company p
      display inline
      font-size 14px
    hr
      display none
    li
      padding 20px 0 0
      clear left
      .bio
        p
          font-size 15px

    li + li
      border-top 1px solid rgba(0,0,0, 0.05)
