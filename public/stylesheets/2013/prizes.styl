@import "2013/_common"

body

  .prizes-widget
    background: #F2F2F2
    padding: 25px
    border-radius: 10px

    .icon-users
      text-indent: -9999px
      background: url('/images/one-per-member.png')
      background-repeat: no-repeat
      width: 19px
      height: 19px
      display: inline-block
    .tabbable
      position: relative
      > .nav-tabs
        border: none
        > li > a
          border: none
          border-radius: 0
          font-family: 'franklin-gothic-urw', Helvetica, Arial, sans-serif
          width: 172px
          h2
            margin: 0
            padding: 0
            font-size: 14px
            text-transform: uppercase
            color: #4B4B4B
            font-weight: bold
            margin-bottom: 5px
            letter-spacing: 1px
          p
            margin: 0
            padding: 0
            font-size: 14px
            color: #838383
            line-height: 1.3

        .active > a
          border-left: 8px solid #CA3C48

      .tab-pane
        background: #fff
        height: 100%
        position: absolute
        top: 0
        bottom: 0
        left: 172px
        right: 0
        padding: 30px
        overflow: auto
        h2
          font-weight: bold
          font-size: 20px
          border-bottom: 1px solid #dedede
          padding-bottom: 13px
          margin-top: 20px
          color: #333
          em
            font-style: #999
            font-size: 14px
            font-weight: normal
            vertical-align: 2px
        ul.images
          margin: 0
          padding: 0
          li
            display inline-block
            margin: 0
            margin-bottom: 3px
            a
              border: none
          img
            width 100px
            height 100px
            border: 1px solid #efefef
        p
          font-size: 16px
        ul
          padding: 0
          margin: 0
          list-style: none
          li
            margin-bottom: 12px
            font-size: 20px
            a
              color: #333
              display: inline-block
              border-bottom: 1px dotted #999
              text-decoration: none
            strong a
              background: #CA3C48
              border-bottom: none
              color #fff
              padding 3px 8px
              font-size 20px
              border-radius 4px
              font-weight normal
              &:hover
                background: #A6293E
                transition .4s


            i
              margin: 0 5px
            .with-popover
              display: inline
              cursor: pointer

  .prizes-page .prizes-widget .tabbable
    height: 1300px

  .prizes-page .sponsors-sidebar
    background: #fff
    margin-top: 20px
