@import "2013/_common"

body
  .landing-section
    padding: 38px 0
    h3
      font-size: 14px
      font-weight: bold
      letter-spacing: 1px
      text-transform: uppercase
      color: #4B4B4B
      margin-top: 0
      margin-bottom: 25px
    hr
      margin: 0
      margin-bottom: 15px
    .countdown
      a
        text-decoration: none
      .label-primary
        background: #CE3D49
        text-transform: uppercase
        padding: 5px 10px
        letter-spacing: 1px
        font-size: 15px
        border-radius: 0
        margin-bottom: -20px

      .timer
        font-family: league-gothic
        font-size: 123px
        color: #B4B4B4
        margin: 0 auto 0
        text-align: center
        line-height: 1.1

        strong
          color: #575757

    .button-boxes
      padding-top: 40px
      padding-bottom: 0px
      .button-box
        position: relative
        margin-bottom: 25px
      .btn
        white-space: inherit
        padding-top: 50px
        height: 200px
        font-size: 20px
        font-weight: normal
        border-radius: 10px
        background: #7D7D7D
        border-color: transparent
        &:hover
          background: #c33a46
          transition .3s

        i
          display: block
          font-size: 50px
          margin-bottom: 20px
    &.row > hr
      margin-left: 15px
      margin-right: 15px

  .main-section
    text-align: center
    padding-top: 32px
    label
      font-weight: bold
      text-transform: uppercase
      color: #CE3D49
      letter-spacing: 1px
      font-size: 17px
      margin: 0

    h2
      margin-top: 0
      margin-bottom: 23px
      font-weight: bold
      font-size: 53px
      color: #222
      .sep
        color: #CDCDCD
        display: inline-block
        margin: 0 8px

    .btn-super
      min-width: 300px
    .pre-registration
      p
        font-size: 14px
        a
          font-weight: bold
    .registration
      p
        font-size: 14px

      h3
        margin-bottom: 10px

  .intro-section
    padding-top: 0
    &.voting
      padding-top: 60px

    p.about
      font-size: 33px
      color: #838383
      line-height: 1.3
      font-weight: 300
      margin-bottom: 15px
      em
        color: #333
        font-style: normal

  .prizes-section
    padding-top: 0px


  .sponsors-section
    p
      text-align: center
      margin-top: 35px
      margin-bottom: 45px
    .sponsor-grid
      text-align: center
      margin-bottom: 30px
      .col
        border-right: 1px solid #E2E2E2
        border-bottom: 1px solid #E2E2E2
        min-height: 125px
        position: relative
        // opacity: 0.6
        background-repeat: no-repeat
        background-size: 100%
        background-position: center center
        &:hover
          opacity: 1.0
      .col:last-child
        border-right: 1px solid transparent
      .row:last-child .col
          border-bottom: 1px solid transparent

    .btn-super
      padding: 10px 20px
      font-size: 14px

  .judges-section
    .nominate-msg
      float: right
      max-width: 300px
      color: #8E8E8E
      font-size: 14px
      font-weight: 300
      line-height: 1.3
      text-align: right
      a
        color: #8E8E8E
        text-decoration: underline

  .about-section
    h3
      margin-bottom: 10px

  .press-section
    p
      padding-top: 15px
    .btn-lg
      font-size: 13px
      text-transform: uppercase
      font-weight: bold
      margin-right: 8px
      min-width: 138px
      padding: 20px
      margin-bottom: 5px
      letter-spacing: 1px

    .download
      margin-top: 20px
      .poster-thumbnail
        border: 1px solid #A65E6D
        background: #8E1F35 url('/images/2013/poster.jpg') no-repeat center center
        background-size: cover
        float: left
        width: 138px
        height: 184px
        margin-right: 8px
        margin-bottom: 0px

      .btn-md
        font-size: 13px
        background: #C93251
        text-transform: uppercase
        min-width: 138px
        text-align: center
        &:hover
          background: #BA2E4A
          transition: .5s

      .download-step
        float: left
        max-width: 150px
        color: #9E9E9E
        font-weight: 300
        line-height: 1.3
        padding-top: 10px
        margin-bottom: 0px
        strong
          display: block
          font-weight: 300
          color: #303030
  h4.next-steps
    strong
      background: #b01e2f
      color: #fff
      text-transform: uppercase
      letter-spacing: 1px
      padding: 5px 10px
      letter-spacing: 1px
      font-size: 15px
      border-radius: 0
      display: inline-block

  &.index-postcoding
    #landing.coding .landing-section

      .countdown
        background: rgba(0,0,0,0.5)
        padding: 20px
        float: left
        margin-bottom: 42px
        border-radius: 10px
        .done-msg
          margin-top: 0
          margin-bottom: 0

    .main-section
      background-image: url('/images/tko.png')
      background-position: top center
      background-repeat: no-repeat
      padding-top: 65px
      margin-top: 24px

    .demo-event
      padding-top: 30px
      text-align: center
      .next-steps
        text-align: center !important
        margin: auto !important
        margin-bottom: 10px !important
    .next-steps-row
      padding-top: 10px
    .demo-event, .next-steps-row
      border-top: 1px solid #555
      background: #181818
      h3
        font-size: 30px
        color: #eee
        margin-top: 0
