@import "2013/_common"

body
  background: #fff

  // lets anchor tags work despite the affixed header, note this only work
  // on divs that display block and don't otherwise have margin/padding
  // see: https://github.com/nko5/website/blob/master/views/index/sponsors.jade#L19
  .anchorable
    margin-top -80px
    padding-top 80px

  a
    color: #CA3C48

  // set all the fonts to franklin
  font-family: franklin
  h1,h2,h3,h4,h5,h6,p
    font-family: franklin

  h1
    font-size: 26px
    color: #505050

  h2
    font-size: 20px
    // color: #888
  h3
    font-size: 16px
  h4:
    font-size: 12px

  p
    color: #606060

  .content-block
    max-width: 600px

  .btn.btn-primary
    background: #C33A46
    border-color: #AF4E60
    border-radius: 3px
    transition: .5s
    &:hover
      background: #A3303A
      transition: .5s
      box-shadow: 0 0 8px rgba(0,0,0,.3)

  .btn-lg
    padding: 7px 20px
    font-size: 14px

  .btn-super
    text-transform: uppercase
    font-weight: bold
    font-size: 20px
    padding: 22px 25px
    letter-spacing: 1px
    i
      display: block
      font-size: 12px
      font-weight: normal

  hr
    border-top: 1px solid #E2E1E2

  .clear
    clear: both

  .well
    h1, h2, h3
      margin: 0

  .person-col
    text-align: center
    padding: 15px

  .person
    text-align: left
    .avatar
      background: #F7F7F7
      background-size: cover
      background-position: center center
      border: 1px solid #C0C0C0
      img
        width: 100%
    label
      display: block
      text-transform: uppercase
      color: #4B4B4B
      font-weight: normal
      font-size: 12px
      letter-spacing: 1px
      margin-top: 8px
      cursor: pointer
      margin-bottom: 3px
      line-height: 1.3
    label.about
      margin-top: 0
    a
      text-decoration: none
      cursor: pointer


    ul.links
      list-style: none
      margin: 0
      padding: 1px
      li
        margin: 0
        margin-right: 4px
        padding: 0
        display: inline-block

  pre
    overflow auto
    > code
      word-wrap normal
      white-space pre

  .clear
    clear: both

  .sponsors-sidebar
    background: #F4F4F4
    border-radius: 3px
    padding: 15px 20px
    padding-bottom: 0
    &.mini-sponsors
      margin-top: -10px
      h3
        margin-top: 0
      .sponsor
        margin-bottom: 30px

    @media screen and (max-width: 767px)
      margin-top: 25px

    .sponsor
      margin-bottom: 42px

    h3
      font-size: 12px
      font-weight: bold
      text-transform: uppercase
      color: #3F4040
      border-bottom: 2px solid #EAEAEA
      padding-bottom: 10px
      margin-bottom: 40px
      margin-top: 0
      line-height: 1.5
      text-align: center

  .sponsors-sidebar, .sponsor-grid
    .sponsor
      position: relative
      background-repeat: no-repeat
      background-size: 100%
      background-position: center center

      @media screen and (max-width: 767px)
        max-width: 250px
        margin-left: auto
        margin-right: auto
        float: none
        display: block

      img
        width: 100%
        display: block
      .img-content
        width: 100%
        height: 100%
        position: absolute
        left: 0
        top: 0

      &:hover
        opacity: 1.0

  .sponsors-horizontal
    .sponsors-sidebar
      .sponsor
        clear: none
        padding: 10px 30px

  .nko-dates
    background: #F6F6F6
    padding: 20px
    text-transform: uppercase
    font-weight: bold
    margin-top: -11px
    border-radius: 5px
    h4
      font-size: 15px
      font-weight: bold
      color: #4B4B4B
      margin-bottom: 15px
    .date-row
      color: #7F7F7F
      font-size: 12px
      clear: both
      border-bottom: 1px dotted #919191
      min-height: 12px
      letter-spacing: 1px
      margin-bottom: 15px
      font-weight: normal
      .date-label
        float: left
        background: #F6F6F6
        padding-right: 5px
      .date-date
        float: right
        background: #F6F6F6
        padding-left: 5px

  #flash
    .alert
      border-radius: 0
      margin: 0
      position: absolute
      top: 0
      left: 0
      right: 0
      z-index: 10000000
